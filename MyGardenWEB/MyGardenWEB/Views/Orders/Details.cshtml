@model MyGardenWEB.Data.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли за поръчката</h1>

<div>
    <h4>Поръчка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Products) *@
            Продукт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Products.Id)
        </dd>
        <dt class = "col-sm-2">
           @*  @Html.DisplayNameFor(model => model.Clients) *@
           Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clients.UserName)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Quantity) *@
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Quantity) *@
             Единична цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model=>model.Products.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактиране</a> |
    <a asp-action="Index">Връщане назад</a>
</div>
