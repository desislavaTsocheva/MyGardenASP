@model IEnumerable<MyGardenWEB.Data.Product>

@{
    ViewData["Title"] = "IndexProduct";
}

<h1>Продукти</h1>

<p>
    <a asp-action="Create">Създай нов продукт</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Българско наименование</label>
@*                 @Html.DisplayNameFor(model => model.BulgarianName)
 *@            </th>
            <th>
                <label>Латинско наименование</label>
@*                 @Html.DisplayNameFor(model => model.LatinName)
 *@            </th>
            <th>
                <label>Размер</label>
@*                 @Html.DisplayNameFor(model => model.Size)
 *@            </th>
            <th>
                <label>Описание</label>
@*                 @Html.DisplayNameFor(model => model.Description)
 *@            </th>
            <th>
                <label>Снимка</label>
@*                 @Html.DisplayNameFor(model => model.PhotoURL)
 *@            </th>
            <th>
                <label>Цена</label>
@*                 @Html.DisplayNameFor(model => model.Price)
 *@            </th>
            <th>
                <label>Регистрация</label>
@*                 @Html.DisplayNameFor(model => model.RegisterOn)
 *@            </th>
            <th>
                <label>Категория</label>
@*                 @Html.DisplayNameFor(model => model.Categories)
 *@            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BulgarianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatinName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
             <img src="@Html.DisplayFor(modelItem => item.PhotoURL)" height="200" width="300"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактиране</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детайли</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>
