@model IEnumerable<MyGardenWEB.Data.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Продукти</h1>

<p>
    <a asp-action="Create">Създай нов продукт</a>
</p>
        <div class="self-grid">
            @foreach (var item in Model)
            {
                <div class="card" style="width:30%; height:25%; ">
                    <div class="card-body">
                        <h5 class="card-title">
                            @Html.DisplayFor(modelItem => item.BulgarianName)
                        </h5>
                        <h5 class="card-title">
                           / @Html.DisplayFor(modelItem => item.LatinName)/
                        </h5>
                        <div class="card-img">
                            <img src="@Html.DisplayFor(modelItem=>item.PhotoURL)" width="350" height="200" />
                        </div>
                        <br/>
@*                         <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p> *@
                        <p>
                            @Html.DisplayFor(modelItem => item.Categories.Name)
                        </p>
                        <p class="card-subtitle">
                            @Html.DisplayFor(modelItem => item.Price)лв
                        </p>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            }
        </div>




