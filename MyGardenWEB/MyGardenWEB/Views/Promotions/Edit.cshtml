@model MyGardenWEB.Data.Promotion

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактиране</h1>

<h4>Промоция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductsId" class="control-label">Продукт</label>
                <select asp-for="ProductsId" class="form-control" asp-items="ViewBag.ProductsId"></select>
                <span asp-validation-for="ProductsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromotionPercent" class="control-label">Промоция</label>
                <input asp-for="PromotionPercent" class="form-control" />
                <span asp-validation-for="PromotionPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Връщане назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
