@model IEnumerable<MyGardenWEB.Data.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Индекс</h1>

<a asp-action="Create">
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="pink" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z" />
        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
    </svg>
</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @*                 @Html.DisplayNameFor(model => model.Name)

                *@
                <lable>Категория</lable>
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Description) *@
                <lable>Описание</lable>
            </th>
            <th>
              @*   @Html.DisplayNameFor(model => model.RegisterOn) *@
                <lable>Регистрация</lable>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактиране</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детайли</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
